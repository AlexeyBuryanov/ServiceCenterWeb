@model ChangeRoleViewModel

@{
    ViewData["Title"] = "Настройка ролей для пользователя";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<br /><br />
<h2>Изменение ролей для пользователя @Model.UserEmail</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group">
        @foreach (var role in Model.AllRoles) {
            <input type="checkbox"
                   name="roles"
                   value="@role.Name" @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") /> @role.Name
            }
    </div>
    <button type="submit" class="btn btn-primary">
        <span class="glyphicon glyphicon-save"></span>&nbsp;Сохранить
    </button>
</form>