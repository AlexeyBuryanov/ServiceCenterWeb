@model ChangePasswordViewModel

@{
    ViewData["Title"] = "Изменить пароль";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<br /><br />
<h2>Изменение пароля для пользователя <b>@Model.Email</b></h2>
<form asp-action="ChangePassword"
      asp-controller="Users"
      method="post"
      class="form-horizontal">
    <div asp-validation-summary="All" class="text-danger"></div>
    <hr />

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Email" />

    @*<div class="form-group">
            <label asp-for="OldPassword" class="col-md-2 control-label"></label>
            <div class="col-md-3">
                <input type="password" asp-for="OldPassword" placeholder="Старый пароль" class="form-control" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
        </div>*@
    <div class="form-group">
        <label asp-for="NewPassword" class="col-md-2 control-label"></label>
        <div class="col-md-3">
            <input type="password" asp-for="NewPassword" placeholder="Новый пароль" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <a class="btn btn-default" asp-action="Users" asp-controller="AdminPanel">
                <span class="glyphicon glyphicon-eye-close"></span>&nbsp;Отмена
            </a>
            <button type="submit" class="btn btn-primary">
                <span class="glyphicon glyphicon-save"></span>&nbsp;Сохранить
            </button>
        </div>
    </div>
</form>